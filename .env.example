# DweepBot Configuration
# Copy this file to .env and update with your values

# ============================================================================
# REQUIRED - API Keys
# ============================================================================

# DeepSeek API Key (required)
# Get your free API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Optional: Alternative LLM providers
# ANTHROPIC_API_KEY=your-anthropic-key
# OPENAI_API_KEY=your-openai-key

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Maximum cost allowed per task (USD)
DWEEPBOT_MAX_COST_USD=5.00

# Maximum iterations per task
DWEEPBOT_MAX_ITERATIONS=50

# Maximum time per task (seconds)
DWEEPBOT_MAX_TIME_SECONDS=3600

# ============================================================================
# TOOL CONFIGURATION
# ============================================================================

# Enable/disable specific tools
DWEEPBOT_ENABLE_WEB_SEARCH=false
DWEEPBOT_ENABLE_CODE_EXECUTION=true
DWEEPBOT_ENABLE_SHELL_EXECUTION=false

# Code execution limits
DWEEPBOT_CODE_EXECUTION_TIMEOUT=30
DWEEPBOT_CODE_EXECUTION_MEMORY_LIMIT_MB=512

# ============================================================================
# WORKSPACE
# ============================================================================

# Workspace directory for agent files
DWEEPBOT_WORKSPACE_PATH=./workspace

# Maximum file size for operations (MB)
DWEEPBOT_MAX_FILE_SIZE_MB=10

# ============================================================================
# MEMORY CONFIGURATION
# ============================================================================

# Working memory size
DWEEPBOT_MAX_WORKING_MEMORY=20

# Vector store
# DWEEPBOT_ENABLE_VECTOR_STORE=false
# DWEEPBOT_VECTOR_STORE=chromadb
# DWEEPBOT_VECTOR_PERSIST_PATH=./chroma_db

# ============================================================================
# ADVANCED FEATURES - Multi-Agent
# ============================================================================

# DWEEPBOT_MAX_AGENTS=5
# DWEEPBOT_AGENT_POOL_SIZE=10

# ============================================================================
# ADVANCED FEATURES - Task Scheduler
# ============================================================================

# DWEEPBOT_SCHEDULER_ENABLED=false
# DWEEPBOT_SCHEDULER_MAX_TASKS=50

# ============================================================================
# ADVANCED FEATURES - Dashboard
# ============================================================================

# DWEEPBOT_DASHBOARD_HOST=0.0.0.0
# DWEEPBOT_DASHBOARD_PORT=8000
# DWEEPBOT_DASHBOARD_UI_PORT=3000

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Rate limiting
# DWEEPBOT_RATE_LIMIT_ENABLED=false
# DWEEPBOT_RATE_LIMIT_REQUESTS=100

# Telemetry (can be disabled)
# DWEEPBOT_TELEMETRY_ENABLED=true
# DWEEPBOT_TELEMETRY_ENDPOINT=https://telemetry.dweepbot.com

# Logging
DWEEPBOT_LOG_LEVEL=INFO
# DWEEPBOT_LOG_FILE=./logs/dweepbot.log

# ============================================================================
# NETWORK
# ============================================================================

# HTTP timeout (seconds)
DWEEPBOT_NETWORK_TIMEOUT=30

# User agent for HTTP requests
# DWEEPBOT_USER_AGENT=DweepBot/1.0

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Debug mode (more verbose logging)
# DWEEPBOT_DEBUG=false

# Development mode
# DWEEPBOT_DEV_MODE=false
